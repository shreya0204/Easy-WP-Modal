{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "all-about-modal/modal",
	"version": "1.0.0",
	"title": "Modal",
	"category": "widgets",
	"icon": "layout",
	"description": "Your go-to modal buddy!",
	"keywords": [
		"modal",
		"popup",
		"dialog"
	],
	"supports": {
		"html": false,
		"innerBlocks": true
	},
	"attributes": {
		"modalId": {
			"type": "string",
			"default": ""
		},
		"visibleOn": {
			"type": "string",
			"default": "both"
		},
		"triggerOnPageLoad": {
			"type": "boolean",
			"default": false
		},
		"triggerOnPageLoadDelay": {
			"type": "number",
			"default": 0
		},
		"triggerOnScroll": {
			"type": "boolean",
			"default": false
		},
		"triggerOnScrollPercentage": {
			"type": "number",
			"default": 50
		},
		"triggerOnExitIntent": {
			"type": "boolean",
			"default": false
		},
		"triggerOnExitIntentTimes": {
			"type": "number",
			"default": 0
		},
		"triggerOnClick": {
			"type": "boolean",
			"default": false
		},
		"triggerOnHover": {
			"type": "boolean",
			"default": false
		},
		"triggerOnFocus": {
			"type": "boolean",
			"default": false
		},
		"triggerOnMouseLeave": {
			"type": "boolean",
			"default": false
		},
		"triggerScrollIntoView": {
			"type": "boolean",
			"default": false
		},
		"triggerScrollIntoViewOffset": {
			"type": "number",
			"default": 0
		},
		"width": {
			"type": "string",
			"default": "50%"
		},
		"height": {
			"type": "string",
			"default": "50%"
		},
		"useContentHeight": {
			"type": "boolean",
			"default": true
		},
		"useContentWidth": {
			"type": "boolean",
			"default": true
		}
	},
	"textdomain": "all-about-modal",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
