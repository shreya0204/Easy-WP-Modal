{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "easy-wp-modal/modal",
	"version": "1.0.0",
	"title": "Modal",
	"category": "widgets",
	"icon": "layout",
	"description": "A modal block for Easy WP Modal Features plugin.",
	"keywords": [
		"modal",
		"popup",
		"dialog"
	],
	"supports": {
		"html": false,
		"innerBlocks": true
	},
	"attributes": {
		"modalId": {
			"type": "string",
			"default": ""
		},
		"visibleOn": {
			"type": "string",
			"default": "both"
		},
		"triggerOnPageLoad": {
			"type": "boolean",
			"default": false
		},
		"triggerOnPageLoadDelay": {
			"type": "number",
			"default": 3
		},
		"triggerOnScroll": {
			"type": "boolean",
			"default": false
		},
		"triggerOnScrollPercentage": {
			"type": "number",
			"default": 50
		},
		"triggerOnExitIntent": {
			"type": "boolean",
			"default": false
		},
		"triggerOnExitIntentTimes": {
			"type": "number",
			"default": 1
		},
		"triggerOnClick": {
			"type": "boolean",
			"default": false
		},
		"triggerOnHover": {
			"type": "boolean",
			"default": false
		},
		"triggerOnFocus": {
			"type": "boolean",
			"default": false
		},
		"triggerOnMouseLeave": {
			"type": "boolean",
			"default": false
		},
		"triggerScrollIntoView": {
			"type": "boolean",
			"default": false
		},
		"triggerScrollIntoViewOffset": {
			"type": "number",
			"default": 0
		}
	},
	"textdomain": "easy-wp-modal",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
